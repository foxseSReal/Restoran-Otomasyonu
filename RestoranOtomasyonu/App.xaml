<Application x:Class="RestoranOtomasyonu.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RestoranOtomasyonu"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="LightBlue" SecondaryColor="LightBlue" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
                <ResourceDictionary Source="/Styles/iconDesing.xaml"/>
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Styles/UserControlCards.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Window" x:Key="MaterialDesignWindow">

                <Setter Property="Background" Value="{DynamicResource MaterialDesignLightSeparatorBackground}"/>
            </Style>

            <!--ArkaPlan-->
            <Style x:Key="arkaPlan" TargetType="Grid">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                            <GradientStop Color="#FF1F62" Offset="1.0"/>
                            <GradientStop Color="#FF4B1F" Offset="0.5"/>
                            <GradientStop Color="#FFBC1F" Offset="0.0"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--Ust Border-->
            <Style x:Key="ustBorder" TargetType="Border">
                <Setter Property="CornerRadius" Value="0 50 0 700"/>
                <Setter Property="Width" Value="1386"/>
                <Setter Property="Padding" Value="0 0 20 0"/>
                <Setter Property="Background" Value="#90DCDCDC"/>
                <Setter Property="BorderBrush" Value="#90DCDCDC"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Grid.Column" Value="0"/>
                <Setter Property="Grid.ColumnSpan" Value="3"/>
                <Setter Property="Grid.Row" Value="0"/>
            </Style>
            <!--Sag Border-->
            <Style x:Key="sagBorder" TargetType="Border">
                <Setter Property="Background" Value="#90DCDCDC"/>
                <Setter Property="BorderBrush" Value="#90DCDCDC"/>
                <Setter Property="CornerRadius" Value="0 0 40 0"/>
                <Setter Property="Padding" Value="0 0 0 0"/>
                <Setter Property="Margin" Value="0 0 0 20"/>
            </Style>
            <!--Sol Border -->
            <Style x:Key="solBorder" TargetType="Border">
                <Setter Property="Background" Value="#90dcdcdc"/>
                <Setter Property="BorderBrush" Value="#FF424242"/>
                <Setter Property="CornerRadius" Value="40 0 0 40"/>
                <Setter Property="Padding" Value="0 20 0 0"/>
                <Setter Property="Margin" Value="10 0 -5 20"/>
            </Style>

            <!--Menu-->
            <Style x:Key="menuBorder" TargetType="Border">
                <Setter Property="Background" Value="#FF424242"/>
                <Setter Property="BorderBrush" Value="#FF424242"/>
                <Setter Property="CornerRadius" Value="0 0 0 0"/>
                <Setter Property="Margin" Value="0 0 0 20"/>
            </Style>

            <!--Saat-->
            <Style x:Key="saat" TargetType="Label">
                <Setter Property="FontFamily" Value="Arial"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="Margin" Value="100 0 0 0"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="40"/>
            </Style>

            <!--Tarih-->
            <Style x:Key="tarih" TargetType="Label">
                <Setter Property="FontFamily" Value="Arial"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="Margin" Value="10 0 0 0"/>
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="40"/>
            </Style>

            <!--DENEMEBUTONU-->
            <Style x:Key="solButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Width" Value="190"/>
                <Setter Property="Height" Value="70"/>
                <Setter Property="Margin" Value="0 10 0 0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="buttonBorder" BorderBrush="{TemplateBinding BorderBrush}"
                     BorderThickness="{TemplateBinding BorderThickness}"
                     Background="{TemplateBinding Background}"
                     CornerRadius="20"
                     >
                                <ContentPresenter HorizontalAlignment="Left" 
                                   VerticalAlignment="Top"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonBorder" Property="BorderBrush">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                                <GradientStop Color="White" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsMouseCaptured" Value="True">
                                    <Setter TargetName="buttonBorder" Property="BorderBrush">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                                <GradientStop Color="White" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsMouseCaptureWithin" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                                <GradientStop Color="White" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="ClickMode" Value="Press">
                                    <Setter TargetName="buttonBorder" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                                <GradientStop Color="White" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


            <!--UserControlStyle-->

            <!--UserControl Personel Kartlari-->
            <Style x:Key="UserButton" TargetType="Button">
                <Setter Property="Width" Value="200"/>
                <Setter Property="Height" Value="300"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="BorderThickness" Value="5"/>
                <Setter Property="BorderBrush">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                            <GradientStop Color="Black" Offset="1.0"/>
                            <GradientStop Color="Black" Offset="0.4"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border BorderBrush="{TemplateBinding BorderBrush}"
                     Background="Transparent"
                     BorderThickness="{TemplateBinding BorderThickness}"
                     CornerRadius="20"
                     >
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--RadioButton-->
            <Style x:Key="radio" TargetType="RadioButton">
                <Setter Property="Width" Value="170"/>
                <Setter Property="Height" Value="70"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Padding" Value="0 0 0 0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="border" CornerRadius="20 0 0 20" Background="Transparent">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#DCDCDC"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="Transparent"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--RadioButton TextBlock-->
            <Style x:Key="textBlock" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontFamily" Value="Arial"/>
                <Setter Property="Width" Value="95"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Margin" Value="0 0 0 0"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <!--MaterialIcon-->
            <Style x:Key="iconMaterialDesign" TargetType="materialDesign:PackIcon">
                <Setter Property="Width" Value="90"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Margin" Value="0 0 0 0"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

            <!--RadioButton Animasyonlu Hali-->
            <Style x:Key="RadioAnimasyon" TargetType="RadioButton">
                <Setter Property="Width" Value="170"/>
                <Setter Property="Height" Value="70"/>
                <Setter Property="Margin" Value="2"/>
                <Setter Property="Padding" Value="0 0 0 0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="AnimasyonBorder" Width="170" Height="70" CornerRadius="20 0 0 20" Background="Transparent">
                                <ContentPresenter Margin="20 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.5"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Background" TargetName="AnimasyonBorder">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FF424242" Offset="0"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="AnimasyonBorder"
                                                  Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Offset)" 
                                                  From="0" To="1" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetName="AnimasyonBorder" 
                                                  Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Offset)" 
                                                  From="0" To="1" Duration="0:0:0.5"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                </Trigger>

                            </ControlTemplate.Triggers>

                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>
