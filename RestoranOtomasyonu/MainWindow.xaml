<Window x:Class="RestoranOtomasyonu.MainWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
           xmlns:local="clr-namespace:RestoranOtomasyonu"
           Style="{StaticResource MaterialDesignWindow}"
           mc:Ignorable="d"
           Title="Personel || Hizmet Bölümü" WindowStyle="None" ResizeMode="NoResize" Width="1537" Height="864" WindowState="Maximized">
    <Grid Style="{StaticResource arkaPlan}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Sağ Bar-->
        <Border Grid.Column="2" Grid.Row="2" Style="{StaticResource sagBorder}">
            <StackPanel x:Name="MainGrid" Background="Transparent" Width="300" Height="784">
                <Label x:Name="lblSaat" Style="{StaticResource saat}"/>
                <Label x:Name="lblTarih" Style="{StaticResource tarih}"/>
                <Separator Width="250"  Height="2" Background="Black" Opacity="0.5" Margin="20 0 20 0" Foreground="Black"/>
            </StackPanel>
        </Border>

        <!--Sol Bar-->
        <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="1" Grid.ColumnSpan="1" Style="{StaticResource solBorder}">
            <StackPanel x:Name="Solpanel">
                <RadioButton IsChecked="True" Click="gunlukHarcama" Style="{StaticResource RadioAnimasyon}">
                    <StackPanel Width="100" Height="75" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <materialDesign:PackIcon Kind="Wallet" Style="{StaticResource iconMaterialDesign}"/>
                        <TextBlock TextAlignment="Center" Padding="0 0 0 0" Text="GÜNLÜK HARCAMA" Style="{StaticResource textBlock}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <Separator Background="#FF424242" Width="120" Margin="15 0 0 0"/>
                <RadioButton Click="muhasebe" Style="{StaticResource RadioAnimasyon}">
                    <StackPanel Width="100" Height="75" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <materialDesign:PackIcon Kind="NoteBook" Style="{StaticResource iconMaterialDesign}"/>
                        <TextBlock TextAlignment="Center" Padding="0 0 0 0" Text="MUHASEBE" Style="{StaticResource textBlock}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <Separator Background="#FF424242" Width="120" Margin="15 0 0 0"/>
                <RadioButton Click="cekSenet" Style="{StaticResource RadioAnimasyon}">
                    <StackPanel Width="100" Height="75" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <materialDesign:PackIcon Kind="NewspaperVariant" Style="{StaticResource iconMaterialDesign}"/>
                        <TextBlock TextAlignment="Center" Padding="0 0 0 0" Text="ÇEK\SENET" Style="{StaticResource textBlock}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <Separator Background="#FF424242" Width="120" Margin="15 0 0 0"/>
                <RadioButton Click="satisDurumu" Style="{StaticResource RadioAnimasyon}">
                    <StackPanel Width="100" Height="75" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <materialDesign:PackIcon Kind="Finance" Style="{StaticResource iconMaterialDesign}"/>
                        <TextBlock TextAlignment="Center" Padding="0 0 0 0" Text="SATIŞ DURUMU" Style="{StaticResource textBlock}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <Separator Background="#FF424242" Width="120" Margin="15 0 0 0"/>
                <RadioButton Click="Personel" Style="{StaticResource RadioAnimasyon}">
                    <StackPanel Width="100" Height="75" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <materialDesign:PackIcon Kind="AccountGroup" Style="{StaticResource iconMaterialDesign}"/>
                        <TextBlock TextAlignment="Center" Padding="0 0 0 0" Text="PERSONEL" Style="{StaticResource textBlock}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <Separator Background="#FF424242" Width="120" Margin="15 0 0 0"/>
                <RadioButton Click="musteri" Style="{StaticResource RadioAnimasyon}">
                    <StackPanel Width="100" Height="75" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <materialDesign:PackIcon Kind="AccountCash" Style="{StaticResource iconMaterialDesign}"/>
                        <TextBlock TextAlignment="Center" Padding="0 0 0 0" Text="MÜŞTERİ FİRMA" Style="{StaticResource textBlock}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <Separator Background="#FF424242" Width="120" Margin="15 0 0 0"/>
                <RadioButton Click="stok" Style="{StaticResource RadioAnimasyon}">
                    <StackPanel Width="100" Height="75" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <materialDesign:PackIcon Kind="PackageVariantClosed" Style="{StaticResource iconMaterialDesign}"/>
                        <TextBlock TextAlignment="Center" Padding="0 0 0 0" Text="STOK" Style="{StaticResource textBlock}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <Separator Background="#FF424242" Width="120" Margin="15 0 0 0"/>
                <RadioButton Click="urun" Style="{StaticResource RadioAnimasyon}">
                    <StackPanel Width="100" Height="75" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <materialDesign:PackIcon Kind="SilverwareClean" Style="{StaticResource iconMaterialDesign}"/>
                        <TextBlock TextAlignment="Center" Padding="0 0 0 0" Text="ÜRÜNLER" Style="{StaticResource textBlock}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <Separator Background="#FF424242" Width="120" Margin="15 0 0 0"/>
                <RadioButton Click="rezervasyon" Style="{StaticResource RadioAnimasyon}">
                    <StackPanel Width="100" Height="75" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Vertical">
                        <materialDesign:PackIcon Kind="CustomerService" Style="{StaticResource iconMaterialDesign}"/>
                        <TextBlock TextAlignment="Center" Padding="0 0 0 0" Text="REZERVASYON" Style="{StaticResource textBlock}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <Separator Background="#FF424242" Width="120" Margin="15 0 0 0"/>
            </StackPanel>

        </Border>

        <!--Menu Bar-->

        <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource menuBorder}">
            <DockPanel x:Name="ContentArea">
                <ContentControl x:Name="Content"/>
            </DockPanel>
        </Border>


        <!--Ust Bar-->
        <Border Style="{StaticResource ustBorder}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Click="Minimize_Click" Style="{StaticResource ustBarButton}">
                    <materialDesign:PackIcon Kind="MinusBox" Style="{StaticResource ustBar_buttonIcon}"/>
                </Button>
                <Button Click="appClose_Click" Style="{StaticResource ustBarButton}">
                    <materialDesign:PackIcon Kind="CloseBox" Style="{StaticResource ustBar_buttonIcon}"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
