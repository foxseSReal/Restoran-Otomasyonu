<UserControl x:Class="ProjePersonelYonetım.userControls.cekSenet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjePersonelYonetım.userControls"
             mc:Ignorable="d"
             d:DesignHeight="784" d:DesignWidth="1036">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <!---->
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2"  Style="{StaticResource effectliBorder}"/>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2"  Style="{StaticResource effectliBorder}"/>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2"  Style="{StaticResource effectliBorder}"/>
        <!---->

        <!--Sol-->
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="0 50 0 0">
                <TextBox x:Name="cekSenet_Ara" Width="150" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Ara" IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap"
    Margin="100 20 0 0"
    Foreground="White"
    FontSize="18"
    MaxLength="12" TextChanged="cekSenet_Ara_TextChanged"/>
                <!---->
                <ComboBox x:Name="cbxCekSenet_Tur" Margin="20 20 0 0" Width="150" 
materialDesign:ColorZoneAssist.Mode="SecondaryLight"
materialDesign:HintAssist.HelperText="Türü"
materialDesign:HintAssist.Hint="Türü" Foreground="White"
materialDesign:TextFieldAssist.HasClearButton="True"
FontSize="20" materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesign.Brush.Primary}" Style="{StaticResource MaterialDesignFloatingHintComboBox}" SelectionChanged="cbxCekSenet_TurSelectionChanged" >
                    <ComboBoxItem Content="Çek" />
                    <ComboBoxItem Content="Senet" />
                </ComboBox>
            </StackPanel>
            <StackPanel Margin="30 10 0 0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <DatePicker FontFamily="Calibri" Foreground="Red" FontSize="18" materialDesign:HintAssist.Hint="Yazma Tarihi" x:Name="CeksenetDataGridAralik" Margin="0 20 0 0" Width="150" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                <DatePicker FontFamily="Calibri" Foreground="Red" FontSize="18" materialDesign:HintAssist.Hint="Ödeme Tarihi" x:Name="CeksenetDataGridAralik2" Margin="20 20 0 0" Width="150" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                <Button x:Name="cekSenet_Filtrele" Content="Filtrele" Margin="20 20 0 0" Click="cekSenet_Filtrele_Click"/>
            </StackPanel>
            <DataGrid x:Name="cekSenet_DataGrid" Margin="20 5 0 0" Width="480" Height="255" Foreground="Black" SelectionChanged="cekSenet_DataGrid_SelectionChanged"/>
            <DataGrid x:Name="cekSenetOdeme_DataGrid"  Margin="20 25 0 0"  Width="480" Height="277" Foreground="Black" SelectionChanged="cekSenetOdeme_DataGrid_SelectionChanged"/>
        </StackPanel>
        <!---->

        <!--Sag-->
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
            <!---->
            <ComboBox x:Name="cbxCekSenet_Firma" Width="300" Margin="0 80 0 0"
materialDesign:ColorZoneAssist.Mode="SecondaryLight"
materialDesign:HintAssist.HelperText="Firma ID"
materialDesign:HintAssist.Hint="Firma" Foreground="White"
materialDesign:TextFieldAssist.HasClearButton="True"
FontSize="20" materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesign.Brush.Primary}" Style="{StaticResource MaterialDesignFloatingHintComboBox}" >
                <ComboBoxItem Content="Anadolu Et ve Süt Ürünleri A.Ş." />
                <ComboBoxItem Content="Yeşilbahçe Sebze Meyve Hali" />
                <ComboBoxItem Content="Toptan İçecek Dağıtım Merkezi" />
                <ComboBoxItem Content="Temizlik ve Hijyen Çözümleri Ltd." />
                <ComboBoxItem Content="Mutfak Ekipmanları A.Ş." />
            </ComboBox>
            <TextBox x:Name="cekSenet_Tutar" Width="300" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Tutar" IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignFilledTextBox}"
            TextWrapping="Wrap"
            Margin="0 20 0 10"
            Foreground="WhiteSmoke"
            FontSize="18"
            MaxLength="8"/>

            <!---->
            <ComboBox x:Name="cbxCekSenet" Margin="0 0 0 15" Width="300" 
materialDesign:ColorZoneAssist.Mode="SecondaryLight"
materialDesign:HintAssist.HelperText="Türü"
materialDesign:HintAssist.Hint="Türü" Foreground="White"
materialDesign:TextFieldAssist.HasClearButton="True"
FontSize="20" materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesign.Brush.Primary}" Style="{StaticResource MaterialDesignFloatingHintComboBox}" >
                <ComboBoxItem Content="Çek" />
                <ComboBoxItem Content="Senet" />
            </ComboBox>

            <!--Aciklama Kutusu-->
            <TextBox x:Name="cekSenet_Aciklama" Foreground="White" Margin="0 20 0 0" Width="300" Height="100" VerticalAlignment="Top" FontWeight="SemiBold" materialDesign:HintAssist.Hint="Açıklama Bölümü..." IsEnabled="{Binding IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignOutlinedTextBox}"
TextWrapping="Wrap" MaxLength="250"
VerticalScrollBarVisibility="Auto"/>

            <!--Tarih&Saat-->
            <DatePicker x:Name="cekSenet_YazmaTarih" Foreground="Red" materialDesign:HintAssist.Hint="Yazılma Tarihi" Margin="0 20 0 0" Width="300" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
            <DatePicker x:Name="cekSenet_OdemeTarih" Foreground="Red" materialDesign:HintAssist.Hint="Ödeme Tarihi" Margin="0 20 0 0" Width="300" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
            <!---->
            <StackPanel Orientation="Horizontal">
                <Button x:Name="cekSenet_Ekle" Content="Ekle" Width="120" Height="50" Margin="20 50 0 0" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Click="cekSenet_Ekle_Click"/>
                <Button x:Name="ceksetnet_OdemeYap" Content="Ödeme Yap" Width="120" Height="50" Margin="40 50 0 0" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Click="ceksetnet_OdemeYap_Click"/>
                <Button x:Name="ceksetnet_Temizle" Content="Temizle" Width="120" Height="50" Margin="40 50 0 0" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Click="ceksetnet_Temizle_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
