<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Red" SecondaryColor="LightBlue" />
        
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="effectliBorder" TargetType="Border" >
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#00CCFF"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="CornerRadius" Value="30"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00CCFF" Direction="0"  ShadowDepth="0" BlurRadius="10"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Uzun Card-->

    <Style x:Key="uzunCard" TargetType="Border">
        <Setter Property="Background" Value="#dcdcdc"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Width" Value="1050"/>
        <Setter Property="Height" Value="220"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="0 0 0 20"/>
        <Setter Property="Padding" Value="0 0 0 0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="White" Direction="0" BlurRadius="15" ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Card-->
    <Style x:Key="Card" TargetType="Border" >
        <Setter Property="BorderBrush" Value="#00CCFF"/>
        <Setter Property="Background" Value="#2E2E2E"/>
        <Setter Property="Width" Value="1000"/>
        <Setter Property="Height" Value="150"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="CornerRadius" Value="30"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#00CCFF" Direction="0"  ShadowDepth="0" BlurRadius="15"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Sol Card-->

    <Style x:Key="SolCard" TargetType="Border">
        <Setter Property="Background" Value="#dcdcdc"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Width" Value="470"/>
        <Setter Property="Height" Value="480"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="10 20 0 0"/>
        <Setter Property="Padding" Value="0 0 0 0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="White" Direction="0" BlurRadius="15" ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Sag Card-->

    <Style x:Key="SagCard" TargetType="Border">
        <Setter Property="Background" Value="#dcdcdc"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Width" Value="500"/>
        <Setter Property="Height" Value="480"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="0 20 20 0"/>
        <Setter Property="Padding" Value="0 0 0 0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="White" Direction="0" BlurRadius="15" ShadowDepth="1"/>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Sari TextBlock-->
    <Style x:Key="sayiTextBlock" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Yellow"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="10 0 0 0"/>
    </Style>


</ResourceDictionary>