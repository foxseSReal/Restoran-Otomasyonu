<UserControl x:Class="ProjePersonelYonetım.userControls.rezervasyon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ProjePersonelYonetım.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="784" d:DesignWidth="1036">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <!---->
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2"  Style="{StaticResource effectliBorder}"/>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2"  Style="{StaticResource effectliBorder}"/>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2"  Style="{StaticResource effectliBorder}"/>
        <!---->

        <!--Sol-->
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0">
            <TextBox x:Name="rezervasyonAra" Width="300" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Rezervasyon Ara" IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignFilledTextBox}"
    TextWrapping="Wrap"
    Margin="10 20 0 0"
    Foreground="WhiteSmoke"
    FontSize="18"
    MaxLength="12" TextChanged="rezervasyonAra_TextChanged"/>
            <StackPanel Margin="30 10 0 0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <DatePicker FontFamily="Calibri" Foreground="Red" FontSize="18" materialDesign:HintAssist.Hint="Tarih Seç" x:Name="RezarvasyonAralik" Margin="0 20 0 0" Width="150" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                <DatePicker FontFamily="Calibri" Foreground="Red" FontSize="18" materialDesign:HintAssist.Hint="Tarih Seç" x:Name="RezarvasyonAralik2" Margin="20 20 0 0" Width="150" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                <Button x:Name="rezervasyonBtn_Filtrele" Content="Filtrele" Width="80" Margin="10 20 0 0" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Click="rezervasyonBtn_Filtrele_Click"/>

            </StackPanel>
            <DataGrid x:Name="rezervasyon_DataGrid" Margin="20 5 0 0" Width="480" Height="600" Foreground="Black" SelectionChanged="rezervasyon_DataGrid_SelectionChanged"/>
        </StackPanel>
        <!---->

        <!--Sag-->
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0">
            <TextBox x:Name="rezervasyon_Adsoyad" Width="300" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Ad Soyad" IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignFilledTextBox}"
            TextWrapping="Wrap"
            Margin="0 100 0 0"
            Foreground="WhiteSmoke"
            FontSize="18"
            MaxLength="36"/>
            <TextBox x:Name="rezervasyon_MasaNo" Width="300" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Masa Numarasi" IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignFilledTextBox}"
            TextWrapping="Wrap"
            Margin="0 20 0 0"
            Foreground="WhiteSmoke"
            FontSize="18"
            MaxLength="8"/>
            <!--NumericUpdown-->
            <materialDesign:NumericUpDown x:Name="rezervasyonKisi_Sayisi" Width="300" Margin="0 10 0 0" FontSize="18" materialDesign:HintAssist.Hint="Kişi Sayısı" Style="{StaticResource MaterialDesignFloatingHintNumericUpDown}" Foreground="White"/>
            <!---->

            <!--Aciklama Kutusu-->
            <TextBox x:Name="rezervasyonAciklama" Margin="0 20 0 0" Width="300" Height="100" VerticalAlignment="Top" FontWeight="SemiBold" materialDesign:HintAssist.Hint="Sipariş, İletişim Numarası..." IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignOutlinedTextBox}"
TextWrapping="Wrap" MaxLength="250"
VerticalScrollBarVisibility="Auto"
Foreground="White"/>
            <!---->

            <!--Tarih&Saat-->
            <DatePicker x:Name="rezervasyonTarih" Foreground="Red" materialDesign:HintAssist.Hint="Tarih Seç" Margin="0 20 0 0" Width="300" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
            <materialDesign:TimePicker Foreground="Red" x:Name="rezervasyonSaat" materialDesign:HintAssist.Hint="Saat Seç" Is24Hours="True" Margin="0 20 0 0" Width="300"/>
            <!---->
            <StackPanel Orientation="Horizontal">
                <Button x:Name="rezervasyonButton_Ekle" Content="Ekle" Width="150" Height="50" Margin="10 50 0 0" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Click="rezervasyonButton_Ekle_Click"/>
                <Button x:Name="rezervasyonButton_Guncelle" Content="Güncelle" Width="150" Height="50" Margin="10 50 0 0" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Click="rezervasyonButton_Guncelle_Click"/>
                <Button x:Name="rezervasyonButton_Sil" Content="Sil" Width="150" Height="50" Margin="10 50 0 0" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" Click="rezervasyonButton_Sil_Click"/>
                <Button x:Name="rezervasyonBtn_Temizle" Content="Temizle" Width="150" Height="50" Margin="-470 200 0 0" Style="{StaticResource MaterialDesignRaisedSecondaryLightButton}" />
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
