<UserControl x:Class="ProjePersonelYonetım.userControls.stok"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ProjePersonelYonetım.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="784" d:DesignWidth="1036">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!---->
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2"  Style="{StaticResource effectliBorder}"/>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2"  Style="{StaticResource effectliBorder}"/>
        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Grid.RowSpan="2"  Style="{StaticResource effectliBorder}"/>
        <!---->

        <!--Sol StackPanel-->
        <StackPanel Orientation="Vertical" Grid.Column="0">
            <TextBox x:Name="stokAra" Width="300" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Stok Ara" AcceptsReturn="True" IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignFilledTextBox}"
 TextWrapping="Wrap"
 Margin="0 30 0 0"
 Foreground="WhiteSmoke"
 FontSize="18"
 MaxLength="24" TextChanged="stokAra_TextChanged"/>
            <StackPanel Margin="60 30 0 0" Orientation="Horizontal">
                <DatePicker x:Name="stokAralık" Foreground="Red" materialDesign:HintAssist.Hint="Tarih Seç" Width="150" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                <DatePicker x:Name="stokAralık2" Foreground="Red" materialDesign:HintAssist.Hint="Tarih Seç" Width="150" Margin="20 0 0 0"  Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
                <Button Content="Filtrele" Margin="30 0 0 0" Width="80" Height="30" Style="{StaticResource MaterialDesignRaisedDarkButton}" Click="Button_Click_2" />

            </StackPanel>
            <DataGrid x:Name="stokDataGrid" Margin="10 10 0 0" Width="460" Height="570" SelectionChanged="stokDataGrid_SelectionChanged"/>
        </StackPanel>

        <!--Sag-->
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBox x:Name="stokUrun" Width="300" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Stoklanacak Ürün" AcceptsReturn="True" IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignFilledTextBox}"
            TextWrapping="Wrap"
            Margin="0 100 0 0"
            Foreground="WhiteSmoke"
            FontSize="18"
            MaxLength="36"/>
            <TextBox x:Name="stokMiktari" Width="300" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Stok Miktarı" AcceptsReturn="True" IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignFilledTextBox}"
            TextWrapping="Wrap"
            Margin="0 20 0 0"
            Foreground="WhiteSmoke"
            FontSize="18"
            MaxLength="8"/>

            <ComboBox x:Name="cbxBirim" Margin="0 10 0 15" Width="300" 
materialDesign:ColorZoneAssist.Mode="SecondaryLight"
materialDesign:HintAssist.HelperText="Birim"
materialDesign:HintAssist.Hint="Birim Seçin" Foreground="White"
materialDesign:TextFieldAssist.HasClearButton="True"
FontSize="18" materialDesign:TextFieldAssist.UnderlineBrush="{DynamicResource MaterialDesign.Brush.Primary}" Style="{StaticResource MaterialDesignFloatingHintComboBox}" >
                <ComboBoxItem Content="Adet" />
                <ComboBoxItem Content="Koli" />
                <ComboBoxItem Content="Litre" />
                <ComboBoxItem Content="Kilo" />
                <ComboBoxItem Content="Palet" />
                <ComboBoxItem Content="Diğer..." />
            </ComboBox>

            <TextBox x:Name="stokFiyat" Width="300" materialDesign:TextFieldAssist.PrefixText="₺" VerticalAlignment="Top" materialDesign:HintAssist.Hint="Fiyat" AcceptsReturn="True" IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignFilledTextBox}"
TextWrapping="Wrap"
Margin="0 20 0 0"
Foreground="WhiteSmoke"
FontSize="18"
MaxLength="8"/>

            <!--Aciklama Kutusu-->
            <TextBox x:Name="stokAciklama" Margin="0 20 0 0" Width="300" Height="100" VerticalAlignment="Top" FontWeight="SemiBold" materialDesign:HintAssist.Hint="Açıklama Bölümü..." AcceptsReturn="True" IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextBoxEnabledComboBox}" Style="{StaticResource MaterialDesignOutlinedTextBox}"
TextWrapping="Wrap" MaxLength="50"
VerticalScrollBarVisibility="Auto" Foreground="White"/>
            <!---->

            <!--Tarih&Saat-->
            <DatePicker x:Name="stokTarih" Foreground="Red" materialDesign:HintAssist.Hint="Tarih Seç"  FontSize="18" Margin="0 20 0 0" Width="300" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
            <materialDesign:TimePicker materialDesign:HintAssist.Hint="Saat Seç" Foreground="Red" x:Name="stokSaat" FontSize="18" Is24Hours="True" Margin="0 20 0 0" Width="300"/>
            <!---->
            <Separator Width="400" Height="20" Margin="0 10 0 20"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Stok Ekle" Margin="10 0 0 0"  Width="150" Height="50" Style="{StaticResource MaterialDesignRaisedDarkButton}" Click="Button_Click"/>
                <Button Content="Stok Güncelle" Margin="10 0 0 0" Width="150" Height="50" Style="{StaticResource MaterialDesignRaisedDarkButton}" Click="Button_Click_1"/>
                <Button Content="Temizle" Margin="10 0 0 0" Width="150" Height="50" Style="{StaticResource MaterialDesignRaisedDarkButton}" Click="Button_Click_3"/>

            </StackPanel>
        </StackPanel>


    </Grid>
</UserControl>
