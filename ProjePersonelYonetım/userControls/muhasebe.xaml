<UserControl x:Class="ProjePersonelYonetım.userControls.muhasebe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:ProjePersonelYonetım.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="784" d:DesignWidth="1036">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <Border CornerRadius="12" Background="Azure" Width="200" Height="90"
                Padding="10" Margin="20 0 20 0" Effect="{DynamicResource MaterialDesignShadowElevation3}">
                <StackPanel>
                    <TextBlock Text="Toplam Gelir" Foreground="Black" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="muhasebe_ToplamGelir" Text="₺ 124,500" Foreground="Black" FontSize="22" FontWeight="SemiBold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="12" Background="#43A047" Width="200" Height="90"
                Padding="10" Margin="20 0 20 0" Effect="{DynamicResource MaterialDesignShadowElevation3}">
                <StackPanel>
                    <TextBlock Text="Net Kâr" Foreground="White" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="muhasebe_NetKar" Text="₺ 34,800" Foreground="White" FontSize="22" FontWeight="SemiBold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="12" Background="#E53935" Width="200" Height="90"
                Padding="10" Margin="20 0 20 0" Effect="{DynamicResource MaterialDesignShadowElevation3}">
                <StackPanel>
                    <TextBlock Text="Toplam Gider" Foreground="White" FontSize="16" FontWeight="Bold"/>
                    <TextBlock x:Name="muhasebe_ToplamGider" Text="₺ 89,700" Foreground="White" FontSize="22" FontWeight="SemiBold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 10 0 0">
            <Button Content="Gelir Filtrele" Margin="20 0 0 0" Name="btnGelirFitrele" Width="121" Height="30" Style="{StaticResource MaterialDesignRaisedDarkButton}" Click="btnGelirFitrele_Click"/>
            <DatePicker x:Name="muhasebe_BaslanicTarih" Foreground="Red" Height="50" Width="160" Margin="175 0 20 0"
        materialDesign:HintAssist.Hint="Başlangıç Tarihi" FontSize="14"
        Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
            <!---->
            <DatePicker x:Name="muhasebe_BitisTarih" Height="50" Width="160" Margin="20 0 20 0" Foreground="Red"
        materialDesign:HintAssist.Hint="Bitiş Tarihi" FontSize="14"
        Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
            <Button Content="GiderFiltrele" Margin="160 0 0 0"  Name="btnGiderFitrele" Width="115" Height="30" Style="{StaticResource MaterialDesignRaisedDarkButton}" Click="btnGiderFitrele_Click"/>
        </StackPanel>

        <!---->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Gelir" Margin="0 0 0 0" HorizontalAlignment="Center" Foreground="Black" FontSize="35" FontWeight="SemiBold" FontFamily="Calibri"/>
                    <DataGrid x:Name="muhasebeGelir_DataGrid" Height="430" Width="480" Grid.Row="2" AutoGenerateColumns="True" CanUserAddRows="False" Margin="0 10 0 5"
              Style="{StaticResource MaterialDesignDataGrid}"
              SelectionMode="Single" RowHeight="38"
              Foreground="Black"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock Text="Gider" Margin="0 0 0 0" HorizontalAlignment="Center" Foreground="Black" FontSize="35" FontWeight="SemiBold" FontFamily="Calibri"/>
                    <DataGrid x:Name="muhasebeGider_DataGrid" Height="430" Width="480" Grid.Row="2" AutoGenerateColumns="True" CanUserAddRows="False" Margin="0 10 0 5"
              Style="{StaticResource MaterialDesignDataGrid}"
              SelectionMode="Single" RowHeight="38"
              Foreground="Black"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <!---->


        <Border Grid.Row="3" Background="{DynamicResource MaterialDesignCardBackground}" CornerRadius="10"
            Padding="20" Effect="{DynamicResource MaterialDesignShadowElevation2}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Toplam Gelir" Margin="0 0 20 0" FontWeight="Bold" FontSize="24"/>
                <TextBlock x:Name="mToplamGelir" FontWeight="Bold" FontSize="24"/>
                <TextBlock Text="Toplam Gider" Margin="50 0 0 0" FontWeight="Bold" FontSize="24"/>
                <TextBlock x:Name="mToplamGider" Text="Toplam Gider:" Margin="200 0 0 0" FontWeight="Bold" FontSize="24"/>
                <TextBlock Text="Zarar:" FontWeight="Bold" Margin="10 0 0 0" FontSize="24" Foreground="Red"/>
                <TextBlock x:Name="mZarar" FontWeight="Bold" Margin="10 0 0 0" FontSize="24" Foreground="Red"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
